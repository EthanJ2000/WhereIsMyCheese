<?xml version="1.0" encoding="utf-8"?><!--
    Feel free to create your own, better looking cheezy note form. You are also welcome to just use the AlertDialog if time is of the essence.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:elevation="20dp"
    android:animateLayoutChanges="true">

    <Button
        android:id="@+id/exitDialogButton"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        style="@style/CloseButton" />

<ImageView
    android:id="@+id/icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:src="@drawable/note_discovered_icon"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtCheeseDiscovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/icon"
        android:textColor="@color/black"
        android:text="Cheese Discovered!"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/cheeseContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/txtCheeseDiscovered"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/pickUpCheeseButton"
        android:layout_below="@id/cheeseContent"
        android:layout_marginTop="10dp"
        android:text="PICK UP CHEESE"
        style="@style/CheezButton" />

</RelativeLayout>